{% extends 'base.html.twig' %}

{% block title %}Accueil Blog{% endblock %}

{% block body %}

<div class="main-wrapper">
    <section class="cta-section theme-bg-light py-5">
        <div class="container text-center">
            <h2 class="heading">Bienvenue sur mon Blog</h2>
            <div class="intro">Je vous invite à parcourir les différents articles du blog afin que vous puissiez prendre connaissance de mes projets et de mes compétences.</div>
        </div><!--//container-->
    </section>

    
    <section class="blog-list px-3 py-5 p-md-5">
        <div class="container">
            <div class="item mb-5">
                {% for article in articles %}
                <div class="media mt-5">
                    <img class="mr-3 img-fluid post-thumb d-none d-md-flex" src="{{asset('images/' ~ article.image)}}" alt="html">
                    <div class="media-body">
                        <h3 class="title mb-1"><a href="blog-post.html">{{ article.title }}</a></h3>
                        <div class="meta mb-1"><span class="date">Publié le {{article.createdAt|date("d/m/Y")}} à {{article.createdAt|date("H:i")}}</span></div>
                        <div class="intro"> {{ article.content|slice(0,250) ~ "..." }} </div>
                        <a class="more-link" href="{{path('read_article', {'id' : article.id})}}">Lire la suite &rarr;</a>
                    </div><!--//media-body-->
                    
                </div><!--//media-->
                {% endfor %}
            </div><!--//item-->

            
            {# <nav class="blog-nav nav nav-justified my-5">
              <a class="nav-link-prev nav-item nav-link d-none rounded-left" href="#">Previous<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
              <a class="nav-link-next nav-item nav-link rounded" href="blog-list.html">Next<i class="arrow-next fas fa-long-arrow-alt-right"></i></a>
            </nav> #}
            
        </div>
    </section>
    


</div><!--//main-wrapper-->

{% endblock %}
